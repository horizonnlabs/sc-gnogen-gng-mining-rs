{
  "name": "setup",
  "steps": [
    {
      "step": "externalSteps",
      "path": "00_init.scen.json"
    },
    {
      "step": "scCall",
      "txId": "add battle tokens",
      "tx": {
        "from": "address:owner",
        "to": "sc:gng-minting",
        "function": "setBattleToken",
        "arguments": [
          "str:EMIDAS-abcdef",
          "str:GNOGONS-abcdef",
          "str:VALIDATORS-abcdef"
        ],
        "gasLimit": "599,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "status": "0",
        "message": "",
        "out": [],
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "scQuery",
      "txId": "get battle tokens",
      "tx": {
        "to": "sc:gng-minting",
        "function": "getBattleTokens",
        "arguments": []
      },
      "expect": {
        "out": [
          "str:EMIDAS-abcdef",
          "str:GNOGONS-abcdef",
          "str:VALIDATORS-abcdef"
        ]
      }
    },
    {
      "step": "scCall",
      "txId": "add token attributes",
      "tx": {
        "from": "address:owner",
        "to": "sc:gng-minting",
        "function": "setPowerAndHeartScores",
        "arguments": [
          "str:EMIDAS-abcdef", "1", "200", "100",
          "str:EMIDAS-abcdef", "2", "150", "100",
          "str:EMIDAS-abcdef", "3", "100", "100",
          "str:EMIDAS-abcdef", "4", "50", "100",
          "str:GNOGONS-abcdef", "1", "100", "100",
          "str:GNOGONS-abcdef", "2", "80", "100",
          "str:GNOGONS-abcdef", "3", "70", "100",
          "str:GNOGONS-abcdef", "4", "60", "100",
          "str:GNOGONS-abcdef", "5", "60", "100",
          "str:GNOGONS-abcdef", "6", "90", "100",
          "str:VALIDATORS-abcdef", "1", "75", "100",
          "str:VALIDATORS-abcdef", "2", "70", "100",
          "str:VALIDATORS-abcdef", "3", "80", "100",
          "str:VALIDATORS-abcdef", "4", "80", "100"
        ],
        "gasLimit": "599,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "status": "0",
        "message": "",
        "out": [],
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "scQuery",
      "txId": "get token attributes",
      "tx": {
        "to": "sc:gng-minting",
        "function": "getTokenAttributes",
        "arguments": ["str:GNOGONS-abcdef", "3"]
      },
      "expect": {
        "out": ["u16:70|u16:100"]
      }
    }
  ]
}
